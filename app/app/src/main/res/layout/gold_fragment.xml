<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goldTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumgothic_regular"
            android:text="우리는 자랑스러운 골드다"
            android:textSize="18sp" />

        <View
            android:id="@+id/goldtopview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/goldTitleTextView"
            android:layout_marginTop="9dp"
            android:background="@color/skyblue" />

        <TextView
            android:id="@+id/InViewTopTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/goldtopview"
            android:layout_alignTop="@id/goldtopview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumgothic_regular"
            android:gravity="center"
            android:text="이기고 싶냐? 그럼 이챔프를 해라"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/championImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/InViewTopTextView"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_home_24" />

        <TextView
            android:id="@+id/championNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/championImageView"
            android:layout_toEndOf="@id/championImageView"
            android:text="champion Name" />


        <TextView
            android:layout_marginTop="10dp"
            android:text="나르"
            android:layout_toEndOf="@id/championImageView"
            android:layout_below="@+id/championNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</ScrollView>